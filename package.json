{
  "name": "react-algolia-hoc",
  "version": "0.1.0",
  "description": "Simple higher order component for algolia search",
  "main": "lib/index.js",
  "files": ["lib/"],
  "dependencies": {
    "algoliasearch": ">=3.24",
    "react": ">=15",
    "react-dom": ">=15"
  },
  "peerDependencies": {
    "algoliasearch": ">=3.24",
    "react": ">=15",
    "react-dom": ">=15"
  },
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-core": "6.26.3",
    "babel-jest": "22.4.4",
    "babel-loader": "7.1.4",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-flow": "6.23.0",
    "babel-preset-react": "6.24.1",
    "emotion": "9.1.3",
    "enzyme": "3.3.0",
    "enzyme-adapter-react-16": "1.1.1",
    "file-loader": "1.1.11",
    "flow-bin": "0.72.0",
    "jest": "22.4.4",
    "prettier": "1.12.1",
    "react-emotion": "9.1.3",
    "react-simplest-typeahead": "1.1.0",
    "webpack": "4.8.3",
    "webpack-cli": "2.1.3",
    "webpack-dev-server": "3.1.4"
  },
  "jest": {
    "testMatch": ["**/__tests__/**/*.(spec|test).js"]
  },
  "scripts": {
    "start":
      "NODE_ENV=demo webpack-dev-server --inline --devtool source-map --mode=development --config ./src/__tests__/demo/webpack.config.js",
    "build:demo":
      "NODE_ENV=demo webpack --mode=production --config ./src/__tests__/demo/webpack.config.js",
    "test": "NODE_ENV=test jest --verbose",
    "build":
      "rm -rf lib && NODE_ENV=production babel --out-dir ./lib --ignore '**/__tests__/' ./src "
  }
}
